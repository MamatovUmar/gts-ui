{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "declaration": true, // Generate declaration files
    "declarationDir": "dist", // Output directory for declaration files
    "emitDeclarationOnly": true, // Emit only declaration files during type-check
    "outDir": "dist", // Output directory for compiled files
    "module": "ESNext", // Target ES modules
    "target": "ESNext", // Modern JavaScript target
    "strict": true, // Enable strict mode for TypeScript
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
